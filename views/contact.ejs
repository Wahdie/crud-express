<%- include('layouts/header') %>
<%- include('layouts/nav') %>
<div class="container mt-5">
      <div class="row">
            <div class="col-md-8">
                  <% if (msg.length !== 0) { %>
                        <div class="alert alert-success" role="alert">
                              <%= msg %>
                        </div>
                  <% } %>
                  <h2>Daftar Kontak</h2>
                  <a href="/contact/add" class="btn btn-primary mb-2">Tambah Kontak</a>
                  <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nama</th>
                            <th scope="col">No. Handphone</th>
                            <th scope="col">Details</th>
                          </tr>
                        </thead>
                        <tbody>
                              <% let i = 1 %>
                              <% contacts.forEach(contact => { %>
                                    <tr>
                                          <th scope="row"><%= i %></th>
                                          <td><%= contact.nama %></td>
                                          <td><%= contact.noHP %></td>
                                          <td><a href="/contact/<%= contact.nama %>" class="btn btn-success badge rounded-pill">
                                            <i class="bi bi-info-circle">
                                                  Detail
                                            </i>
                                          </a>
                                          </td>
                                        </tr>
                                    
                              <% i++ }) %>
                          
                        </tbody>
                      </table>
            </div>
      </div>
</div>


<%- include('layouts/footer') %>
