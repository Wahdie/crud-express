<%- include('layouts/header') %>
<%- include('layouts/nav') %>
<div class="container mt-3">
      <div class="row">
            <div class="col-md-8">
                  <h2>Detail Kontak</h2>
                  <% if (!contact) { %>
                        <div class="alert alert-danger" role="alert">
                              Maaf, kontak tidak ditemukan.
                        </div>
                        <a href="/contact" class="card-link">Kembali ke daftar kontak</a>
                  <% } else {%>
                        <div class="card" style="width: 18rem;">
                              <div class="card-body">
                                <h5 class="card-title">Detail Kontak</h5>
                                <p class="card-text"><%= contact.nama %></p>
                              </div>
                              <ul class="list-group list-group-flush">
                                <li class="list-group-item"><%= contact.noHP %></li>
                                <li class="list-group-item"><%= contact.email %></li>
                              </ul>
                              <div class="card-body">
                                    <a href="/contact/edit/<%= contact.nama %>" class="btn btn-success badge">Edit</a>
                                    <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('Yakin kontak mau dihapus?')">Delete</a>
                                    <a href="/contact" class="card-link d-block mt-3">Kembali ke daftar kontak</a>
                              </div>
                        </div>
                  <% } %> 
            </div>
      </div>
</div>
<%- include('layouts/footer') %>
